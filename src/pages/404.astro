---
import BasePage from "../layouts/BasePage.astro";
import { getPageLink, ICONS } from "../utils";
import { Icon } from "astro-icon/components";
---
<BasePage>
    <div class="flex flex-col items-center justify-center h-full gap-2 text-center align-middle">
        <h1 class="font-black text-8xl">Oh no!</h1>
        <div class="flex flex-row items-center gap-1">
            <span>We can't find this {Astro.url.pathname.includes("posts") ? "recipe " : "page "}</span>
            <Icon name={ICONS.SAD}></Icon>
        </div>
        <a class="p-2 font-medium text-white rounded-lg bg-main-600" href={getPageLink()}>Go back home</a>
    </div>
</BasePage>