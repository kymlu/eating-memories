---
import "../styles/global.css"
interface Props {
	name: string;
	link: string;
	imageLink?: string;
}
const { name, link, imageLink} = Astro.props;
---

<a href={link} class="box-content flex flex-col items-center w-24 px-3 pt-2 pb-1 transition-all duration-100 border-2 border-solid rounded-lg min-h-5 border-main-500 hover:shadow-custom hover:shadow-main-400">
    <img src={imageLink ?? "/eating-memories/favicon.svg"} class="w-20 h-20 rounded-lg bg-main-100">
    <span class="text-center">{name}</span>
</a>