---
import { Icon } from "astro-icon/components";
import { getPageLink } from "../utils";
import { SITE_TITLE, ICONS } from "../const.ts";
---

<div id="footer" class="flex items-center py-2 text-white justify-evenly bg-main-600">
    <div class="flex items-center gap-4">
        <a href={getPageLink()} class="flex flex-row items-center flex-1 gap-2">
            <Icon name={ICONS.LOGO} class="text-3xl"></Icon>
            <div class="font-bold">{ SITE_TITLE }</div>
        </a>
    </div>
    <a target="_blank" rel="noopener noreferrer" href=`https://github.com/kymlu/eating-memories`>
        <div class="flex flex-row items-center gap-1 p-2">
            <Icon name={ICONS.GITHUB}></Icon>
            <span class="portrait:hidden">Github</span>
        </div>
    </a>
</div>

<style>
    :global(.dark) #footer {
        @apply bg-main-900;
    }
</style>